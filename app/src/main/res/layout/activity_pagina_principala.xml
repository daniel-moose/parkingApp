<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".paginaPrincipala">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile application for monitoring parking lots"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.172"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <Button
        android:id="@+id/butonSolicitare"
        android:layout_width="209dp"
        android:layout_height="53dp"
        android:layout_marginTop="30dp"
        android:text="Request a booking"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butonDetaliiCont"
        app:layout_constraintVertical_bias="0.007" />

    <Button
        android:id="@+id/butonDetaliiCont"
        android:layout_width="164dp"
        android:layout_height="67dp"
        android:layout_marginTop="40dp"
        android:text="Account details"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butonDetalii"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/butonSolicitaIntrare"
        android:layout_width="195dp"
        android:layout_height="57dp"
        android:text="Request the entry code"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butonSolicitare"
        app:layout_constraintVertical_bias="0.265" />

    <Button
        android:id="@+id/butonSolicitaIesire"
        android:layout_width="203dp"
        android:layout_height="94dp"
        android:text="Pay and request the exit code"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butonSolicitare"
        app:layout_constraintVertical_bias="0.172" />

    <Button
        android:id="@+id/butonDetalii"
        android:layout_width="164dp"
        android:layout_height="67dp"
        android:text="Parking details"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.248" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="320dp"
        android:layout_height="59dp"
        android:text="In order to be able to pay and exit, you must be logged in to your account when you leave the parking lot! "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.037" />

</androidx.constraintlayout.widget.ConstraintLayout>